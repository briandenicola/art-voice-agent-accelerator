# ═══════════════════════════════════════════════════════════════════════════════
# Evaluation Quiet Mode - Source this before running evaluations
# ═══════════════════════════════════════════════════════════════════════════════
# Usage:
#   source tests/evaluation/eval-quiet.env
#   python -m tests.evaluation.cli run --input <scenario.yaml>
#
# Or inline:
#   env $(cat tests/evaluation/eval-quiet.env | grep -v '^#' | xargs) \
#     python -m tests.evaluation.cli run --input <scenario.yaml>
# ═══════════════════════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────────────────────
# Core Log Level - Set to WARNING to suppress INFO-level chatty logs
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# ─────────────────────────────────────────────────────────────────────────────
EVAL_LOG_LEVEL=WARNING

# ─────────────────────────────────────────────────────────────────────────────
# Disable Cloud Telemetry - Skips OpenTelemetry/Azure Monitor overhead
# Set to "true" to disable (speeds up local evaluation runs)
# ─────────────────────────────────────────────────────────────────────────────
DISABLE_CLOUD_TELEMETRY=true

# ─────────────────────────────────────────────────────────────────────────────
# Azure SDK Logging - These are VERY noisy at INFO level
# ─────────────────────────────────────────────────────────────────────────────
AZURE_LOG_LEVEL=warning

# ─────────────────────────────────────────────────────────────────────────────
# OpenAI SDK Logging - Request/response logging at INFO is verbose
# ─────────────────────────────────────────────────────────────────────────────
OPENAI_LOG=warn

# ─────────────────────────────────────────────────────────────────────────────
# HTTP Client Logging - urllib3/httpx can be chatty
# ─────────────────────────────────────────────────────────────────────────────
HTTPX_LOG_LEVEL=WARNING
URLLIB3_LOG_LEVEL=WARNING

# ─────────────────────────────────────────────────────────────────────────────
# Python Warnings - Suppress deprecation warnings
# ─────────────────────────────────────────────────────────────────────────────
PYTHONWARNINGS=ignore::DeprecationWarning,ignore::UserWarning
